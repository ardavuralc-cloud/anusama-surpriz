<body>
    <!-- OYUN EKRANI -->
    <div id="gameScreen">
        <h1>💖 Anuşa İçin Özel Oyun 💖</h1>
        <p>Düşen kalpleri yakala ve sürprizi kazan!</p>
        <p style="font-size: 1.2em;">🎯 Hedef: 10 kalp</p>
        <button id="startBtn">Oyunu Başlat! 🎮</button>

        <div id="gameArea">
            <div id="scoreBoard">Kalpler: <span id="score">0</span> / 10</div>
            <div id="basket">🧺</div>
        </div>
    </div>

    <!-- SÜRPRİZ EKRANI -->
    <div id="surpriseScreen">
        <div class="container">
            <h1>🎉 Doğum Günün Kutlu Olsun Anuşa 🎉</h1>
            
            <div class="heart">💖</div>
            
            <div class="photo-frame">
                <div class="photo-inner">🎂</div>
            </div>

            <div class="message">
                Doğum günün kutlu olsun bebeğim.<br><br>
                Nice mutlu senelere... Seninle geçirdiğim her an hayatımın en güzel anları.
            </div>

            <button class="button" id="photoBtn">Sürprizi Aç 🎁</button>
            
            <div id="surpriseMessage" style="display: none;">
                <h2>Seni Çok Seviyorum ❤️</h2>
                
                <div id="photoGallery">
                    <div class="photo-item">
                        <img src="https://i.ibb.co/HTjsSVMz/foto1-jpg.jpg" alt="">
                    </div>
                    <div class="photo-item">
                        <img src="https://i.ibb.co/wrxK4xfz/foto2-jpg.jpg" alt="">
                    </div>
                    <div class="photo-item">
                        <img src="https://i.ibb.co/mCtqmP5Z/foto3-jpg.jpg" alt="">
                    </div>
                    <div class="photo-item">
                        <img src="https://i.ibb.co/BKv2833g/foto5jpg.jpg" alt="">
                    </div>
                </div>
                
                <p style="font-size: 1.2em; color: #ff1744; margin-top: 30px; margin-bottom: 40px; font-weight: 500;">
                    Sen benim herşeyimsin ve seninle olmaktan çok mutluyum.
                </p>
            </div>
        </div>
    </div>

    <script>
        let score = 0;
        let gameActive = false;
        let basketX = 350;
        let heartInterval;

        const basket = document.getElementById('basket');
        const gameArea = document.getElementById('gameArea');
        const scoreDisplay = document.getElementById('score');
        const startBtn = document.getElementById('startBtn');

        // Butona tıklama - hem mouse hem touch
        startBtn.addEventListener('click', startGame);
        startBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            startGame();
        });

        function startGame() {
            document.getElementById('startBtn').style.display = 'none';
            document.querySelector('#gameScreen h1').style.display = 'none';
            document.querySelectorAll('#gameScreen p').forEach(p => p.style.display = 'none');
            gameArea.style.display = 'block';
            gameActive = true;
            score = 0;
            scoreDisplay.textContent = score;
            
            // Sepeti ortala
            basketX = gameArea.offsetWidth / 2 - 50;
            basket.style.left = basketX + 'px';
            
            // Kalp düşürmeye başla
            heartInterval = setInterval(dropHeart, 1000);
        }

        // Fare ile sepeti hareket ettir
        gameArea.addEventListener('mousemove', (e) => {
            if (!gameActive) return;
            const rect = gameArea.getBoundingClientRect();
            basketX = e.clientX - rect.left - 50;
            basketX = Math.max(0, Math.min(basketX, gameArea.offsetWidth - 100));
            basket.style.left = basketX + 'px';
        });

        // Mobil için touch desteği - daha hassas
        gameArea.addEventListener('touchmove', (e) => {
            if (!gameActive) return;
            e.preventDefault();
            const rect = gameArea.getBoundingClientRect();
            const touch = e.touches[0];
            basketX = touch.clientX - rect.left - 50;
            basketX = Math.max(0, Math.min(basketX, gameArea.offsetWidth - 100));
            basket.style.left = basketX + 'px';
        }, { passive: false });

        // Touch start - sepeti tut
        gameArea.addEventListener('touchstart', (e) => {
            if (!gameActive) return;
            e.preventDefault();
        }, { passive: false });

        function dropHeart() {
            if (!gameActive) return;
            
            const heart = document.createElement('div');
            heart.className = 'falling-heart';
            heart.textContent = ['💕', '💖', '💗', '💓'][Math.floor(Math.random() * 4)];
            
            const startX = Math.random() * (gameArea.offsetWidth - 50);
            heart.style.left = startX + 'px';
            heart.style.top = '-50px';
            
            const duration = 3 + Math.random() * 2;
            heart.style.animationDuration = duration + 's';
            
            gameArea.appendChild(heart);
            
            // Çarpışma kontrolü
            const checkCollision = setInterval(() => {
                const heartRect = heart.getBoundingClientRect();
                const basketRect = basket.getBoundingClientRect();
                
                if (heartRect.bottom >= basketRect.top &&
                    heartRect.top <= basketRect.bottom &&
                    heartRect.right >= basketRect.left &&
                    heartRect.left <= basketRect.right) {
                    
                    // Kalp yakalandı!
                    heart.remove();
                    clearInterval(checkCollision);
                    score++;
                    scoreDisplay.textContent = score;
                    
                    // Skor animasyonu
                    scoreDisplay.parentElement.style.transform = 'scale(1.2)';
                    setTimeout(() => {
                        scoreDisplay.parentElement.style.transform = 'scale(1)';
                    }, 200);
                    
                    if (score >= 10) {
                        winGame();
                    }
                }
                
                // Kalp düştüyse
                if (heartRect.top > gameArea.offsetHeight) {
                    heart.remove();
                    clearInterval(checkCollision);
                }
            }, 50);
        }

        function winGame() {
            gameActive = false;
            clearInterval(heartInterval);
            
            // Tüm kalpleri temizle
            document.querySelectorAll('.falling-heart').forEach(h => h.remove());
            
            // Kazanma animasyonu
            gameArea.style.transition = 'all 1s ease';
            gameArea.style.opacity = '0';
            gameArea.style.transform = 'scale(0.8)';
            
            setTimeout(() => {
                document.getElementById('gameScreen').style.display = 'none';
                document.getElementById('surpriseScreen').style.display = 'block';
                document.body.classList.add('surprise-mode');
                
                // Animasyonları başlat
                initSurpriseAnimations();
            }, 1000);
        }

        function initSurpriseAnimations() {
            // Balonlar
            for (let i = 0; i < 12; i++) {
                const balloon = document.createElement('div');
                balloon.className = 'balloon';
                balloon.textContent = ['🎈', '🎉', '🎊', '✨'][Math.floor(Math.random() * 4)];
                balloon.style.left = Math.random() * 100 + 'vw';
                balloon.style.top = Math.random() * 100 + 'vh';
                balloon.style.animationDelay = Math.random() * 5 + 's';
                document.body.appendChild(balloon);
            }

            // Konfeti
            for (let i = 0; i < 30; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.backgroundColor = ['#ff6b9d', '#ff1744', '#ffd700', '#ff9ff3'][Math.floor(Math.random() * 4)];
                confetti.style.animationDelay = Math.random() * 5 + 's';
                confetti.style.animationDuration = (Math.random() * 3 + 3) + 's';
                document.body.appendChild(confetti);
            }

            // Yıldızlar
            for (let i = 0; i < 15; i++) {
                const star = document.createElement('div');
                star.className = 'stars';
                star.textContent = '⭐';
                star.style.left = Math.random() * 100 + 'vw';
                star.style.top = Math.random() * 100 + 'vh';
                star.style.animationDelay = Math.random() * 2 + 's';
                document.body.appendChild(star);
            }

            // Uçan kalpler (yukarı)
            setInterval(() => {
                const heart = document.createElement('div');
                heart.className = 'floating-hearts';
                heart.textContent = ['💕', '💖', '💗', '💓'][Math.floor(Math.random() * 4)];
                heart.style.left = Math.random() * 100 + 'vw';
                document.body.appendChild(heart);
                setTimeout(() => heart.remove(), 6000);
            }, 1500);

            // Yağan kalpler (aşağı)
            setInterval(() => {
                const heart = document.createElement('div');
                heart.className = 'falling-hearts-bg';
                heart.textContent = ['❤️', '💕', '💖', '💗', '💓', '💞'][Math.floor(Math.random() * 6)];
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.fontSize = (Math.random() * 1.5 + 1.5) + 'em';
                document.body.appendChild(heart);
                setTimeout(() => heart.remove(), 8000);
            }, 800);

            // Parıltılar
            for (let i = 0; i < 20; i++) {
                const sparkle = document.createElement('div');
                sparkle.className = 'sparkle';
                sparkle.style.left = Math.random() * 100 + 'vw';
                sparkle.style.top = Math.random() * 100 + 'vh';
                sparkle.style.animationDelay = Math.random() * 2 + 's';
                document.body.appendChild(sparkle);
            }
        }

        function showPhotos() {
            const msg = document.getElementById('surpriseMessage');
            msg.style.display = 'block';
            
            // Mega konfeti patlaması
            for (let i = 0; i < 150; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.top = '-10px';
                confetti.style.backgroundColor = ['#ff6b9d', '#ff1744', '#ffd700', '#ff9ff3', '#a29bfe', '#fd79a8'][Math.floor(Math.random() * 6)];
                confetti.style.animationDuration = (Math.random() * 3 + 2) + 's';
                confetti.style.width = (Math.random() * 15 + 8) + 'px';
                confetti.style.height = (Math.random() * 15 + 8) + 'px';
                confetti.style.animationDelay = (Math.random() * 0.5) + 's';
                document.body.appendChild(confetti);
                
                setTimeout(() => confetti.remove(), 6000);
            }

            // Ekstra kalpler
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.className = 'floating-hearts';
                heart.textContent = '💖';
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.fontSize = (Math.random() * 2 + 1) + 'em';
                document.body.appendChild(heart);
                setTimeout(() => heart.remove(), 6000);
            }
        }

        // Fotoğraflar butonu için event listener
        document.addEventListener('DOMContentLoaded', () => {
            const photoBtn = document.getElementById('photoBtn');
            if (photoBtn) {
                photoBtn.addEventListener('click', showPhotos);
                photoBtn.addEventListener('touchstart', (e) => {
                    e.preventDefault();
                    showPhotos();
                });
            }
        });
    </script>
</body>
</html>
